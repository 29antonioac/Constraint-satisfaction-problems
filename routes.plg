dist(From,To,Km) :-
    distTo(From,To,Km).
dist(From,To,Km) :-
    distTo(To,From,Km).

route(From, To) :-
    dist(From, To, _).

route(From, To) :-
    dist(From, Aux, _),
    write(Aux),
    route(Aux, To).

route(From, To, Route) :-
    dist(From, To, _).

route(From, To, Route) :-
    dist(From, Aux, _),
    not( member(Aux, Route) ),
    Route is [Aux | Route],
    route(Aux, To, Route).
